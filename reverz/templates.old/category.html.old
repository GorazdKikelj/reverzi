{% extends 'base.html' %}
{% block title %}
  Kategorije produktov
{% endblock %}

{% block content %}
<div class="container-fluid">
<div class="row text-center">
    <div class="col-md-4">
        <h3>Kategorije produktov</h3>
    </div>
    <div class="col-md-8"></div>
</div>
<div class="row">
    <div class="col-md-4">
        {% with messages = get_flashed_messages() %}
        {% if messages %}
        {% for message in messages %}
            <div class="alert alert-success alert-dismissable dade show" role="alert">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
        {% endfor %}
        {% endif %}
        {% endwith %}
        
        <div class="card text-center bg-dark">
            <div class="card-body">
            <form action="{{url_for("category_page")}}" method="POST">
                {{ cat_form.hidden_tag() }}
                <div class="form-group">
                    {{ cat_form.id.label() }}
                    {{ cat_form.id(class="form-control", placeholder="Category") }}
                </div>
                <div class="form-group">
                    {{ cat_form.description.label() }}
                    {{ cat_form.description(class="form-control", rows="4", placeholder="Description") }}
                </div>
            </div>
            <div class="card-footer">
                {{ cat_form.submit(class="btn btn-sm btn-block btn-primary") }}
            </div>
            </form>
        </div>
    </div>
    <div class="col-md-8">
        <table id="cust_list" class="table table-sm table-bordered table-dark">
            <thead>
                <tr>
                    <td>Category</td>
                    <td>Description</td>
                    <td>Last change</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                {% for row in categories %}
                <tr>
                    <td>{{ row.id }}</td>
                    <td>{{ row.description }}</td>
                    <td>{{ row.last_update }}</td>
                    <td><a href="/category/edit/{{ row.id }}" class="btn btn-secondary btn-sm">Edit</a>
                        <a href="/category/delete/{{ row.id }}" class="btn btn-secondary btn-sm">Delete</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>        
    </div>
</div>
</div>
{% endblock %}

