            </h1>
            <br>
            {{ izdaja_form.reverz_id.label() }}
            {{ izdaja_form.reverz_id(class="form-control", placeholder="Številka reverza") }}
            <br>


        </form>
    </div>
-->
</body>
{% endblock %}
